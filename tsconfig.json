{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",   // Saída da compilação
    "rootDir": "./src",   // Diretório de arquivos de origem
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],  // Incluir todos os arquivos TypeScript no diretório 'src'
  "exclude": ["node_modules"]  // Excluir 'node_modules'
}
